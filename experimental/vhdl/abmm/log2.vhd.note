function log2_unsigned ( x : natural ) return natural is
        variable temp : natural := x ;
        variable n : natural := 0 ;
    begin
        while temp > 1 loop
            temp := temp / 2 ;
            n := n + 1 ;
        end loop ;
        if x > 2 ** n then
            return ( n + 1 ) ; 
        else
            return ( n ) ; 
        end if ;
    end function log2_unsigned ;
